<h1>Update your information</h1>
<div class = "row">
    <div class="span6 offset3">
        <%= form_for(@user) do |u| %>
            <%= render 'shared/user_error_msg' %>

            <%= u.label :name %>
            <%= u.text_field :name %>


            <%= u.label :email %>
            <%= u.text_field :email %>

            <%= u.label :coins, "Coins in wallet" %>
            <%= u.text_field :coins %>

            <%= u.label :password %>
            <%= u.password_field :password %>


            <%= u.label :password_confirmation, "Confirm Password" %>
            <%= u.password_field :password_confirmation %>

            <%= u.submit "Save changes", class: "btn btn-large btn-primary" %>
        <% end %>
    </div>
</div>
        

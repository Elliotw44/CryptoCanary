<% if @worker.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-error">
            The form contains <%= pluralize(@worker.errors.count,"error") %>
        </div>
        <ul>
            <% @worker.errors.full_messages.each do |msg| %>
                <li> <%= msg%> </li>
            <% end %>
        </ul>
    </div>
<% end %>
